<html>
    <head>
        <title>Movie App</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" >
        <link rel="stylesheet" href="stylesheets/design.css">
    </head>
    <body>
        <h1 id="searchheading">Search Results <span style="color: aqua;">></span><%= searchQuery.toUpperCase()%></h1>

       <%  data["results"].forEach((movie) =>{ %>
            <div class="card mb-5 w-75">
                <div class="row no-gutters">
                    <div class="col md-4">
                        <img src="https://image.tmdb.org/t/p/w1280<%= movie["poster_path"] %>" class="card-img img-fluid">
                    </div>
                    <div class="col md-8">
                        <div class="card-body">
                            <h2 class="card-title"><%= movie["originial_title"] %> </h2>
                            <hr>
                            <p class="card-text"><%= movie["overview"] %></p>
                            <hr>
    
                            <p class="card-text"><b>Date Published: </b><%= movie["release_date"] %></p>
                            <p class="card-text"><b>Total Votes: </b><%= movie["vote_count"] %></p>
                            <p class="card-text"><b>Average rating: </b><%= movie["vote_average"] %></p>
                        </div>
                    </div>
                </div>
            </div>

        <% }) %>
        
    
    </body>
</html>